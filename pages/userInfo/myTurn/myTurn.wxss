.turn {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
  font-size: 28rpx;
  color: #666;
}

.noTurn {
  width: 424rpx;
  height: 280rpx;
}

.turnTitle {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  padding: 40rpx 0 20rpx 0;
}

.btn1 {
  width: 280rpx;
  height: 88rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 8rpx 32rpx 0rpx rgba(248, 122, 47, 0.15);
  border-radius: 46rpx;
  border: 2rpx solid rgba(248, 122, 47, 1);
  font-size: 32rpx;
  text-align: center;
  line-height: 88rpx;
  color: #F87A2F;
  margin-right: 15rpx;
  margin-top: 40rpx;
}

.btn2 {
  width: 280rpx;
  height: 88rpx;
  background: linear-gradient(315deg, rgba(248, 122, 47, 1) 0%, rgba(249, 148, 87, 1) 100%);
  box-shadow: 0rpx 8rpx 32rpx 0rpx rgba(248, 122, 47, 0.3);
  border-radius: 46rpx;
  font-size: 32rpx;
  text-align: center;
  margin-top: 40rpx;
  margin-left: 15rpx;
  line-height: 88rpx;
  color: #fff;
}

.top {
  height: 328rpx;
  font-size: 28rpx;
  z-index: -1;
  position: relative;
  color: #fff;
}

.helpDetail {
  height: 328rpx;
  width: 100%;
  position: relative;
}

.timetitle {
  font-size: 32rpx;
  text-align: center;
  position: absolute;
  top: 36rpx;
  width: 100%;
  font-family: PingFangSC-Medium, PingFang SC;
}

.timeBtn {
  width: 76rpx;
  height: 76rpx;
  font-family: 'Antonio';
  background: rgba(251, 145, 76, 0.5);
  border-radius: 16rpx;
  text-align: center;
  line-height: 76rpx;
  font-size: 44rpx;
  font-weight: bold;
  border: 2rpx solid rgba(255, 255, 255, 1);
}

.time {
  position: absolute;
  top: 110rpx;
  width: 100%;
}

.timeDiv {
  display: flex;
  justify-content: center;
  align-items: flex-end;
}

.timeText {
  padding-left: 10rpx;
  padding-right: 22rpx;
}

.content {
  border-radius: 24px 24px 0px 0px;
  background: #fff;
  padding: 40rpx 30rpx;
  font-size: 30rpx;
  color: #333;
  margin-top: -90rpx
}

.title {
  font-size: 40rpx;
  color: #333;
  font-weight: bold;
}

.baochou {
  padding: 20rpx 0 28rpx 0;
  font-size: 30rpx;
  color: #F87A2F;
  font-weight: bold;
}

.button {
  position: fixed;
  bottom: 40rpx;
  margin: auto;
  width: 100%;
}

.newMain {
  display: flex;
  flex-direction: column;
  flex: 1;
  height: 100vh;
}

.newBottom {
  height: 104rpx;
  width: 100%;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx -8rpx 32rpx 0rpx rgba(0, 0, 0, 0.03);
  border-radius: 24rpx 24rpx 0rpx 0rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.newBtn1 {
  width: 164rpx;
  height: 64rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 4rpx 16rpx 0rpx rgba(248, 122, 47, 0.15);
  border-radius: 46rpx;
  border: 2rpx solid rgba(248, 122, 47, 1);
  margin-right: 20rpx;
  text-align: center;
  line-height: 64rpx;
  color: #F87A2F;
  font-size: 26rpx;
  font-weight: bold;
}

.newBtn2 {
  width: 164rpx;
  height: 64rpx;
  background: linear-gradient(315deg, rgba(248, 122, 47, 1) 0%, rgba(249, 148, 87, 1) 100%);
  box-shadow: 0rpx 4rpx 16rpx 0rpx rgba(248, 122, 47, 0.3);
  margin-right: 20rpx;
  text-align: center;
  line-height: 64rpx;
  color: #fff;
  font-size: 26rpx;
  font-weight: bold;
  border-radius: 46rpx;
}
