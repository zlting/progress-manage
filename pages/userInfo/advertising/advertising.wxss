.main {
  padding: 0 30rpx;
  background: #fff;
  border-radius: 24rpx 24rpx 0px 0px;
  margin-top: 20rpx;
}

.msgTitle {
  font-size: 30rpx;
  color: #333;
  padding: 40rpx 0 30rpx;
  font-weight: bold;
}

.msgInput {
  background: rgba(246, 246, 246, 1);
  padding: 30rpx;
  border-radius: 24rpx;
}


.inputText {
  text-align: right;
  font-size: 30rpx;
  color: #666;
}

.msg_upload {
  width: 160rpx;
  height: 160rpx;
}

.msg_upload_div {
  width: 160rpx;
  height: 160rpx;
  position: relative;
}

.msg_upload_num {
  font-size: 30rpx;
  color: #ccc;
  position: absolute;
  left: 54rpx;
  bottom: 24rpx;
}

.upload {
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #F6F6F6;

}

.imgItem {
  width: 160rpx;
  height: 160rpx;
}

.title {
  padding: 46rpx 0 44rpx;
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  border-bottom: 2rpx solid #F6F6F6;

}

input {
  font-weight: normal;
}

.upload_icon_right {
  width: 20rpx;
  height: 28rpx;
  margin-left: 10rpx;
}

.uplodImg {
  width: 160rpx;
  height: 160rpx;
  position: relative;
  margin-bottom: 30rpx;
  margin-right: 30rpx;
}

.upload_delect {
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  right: 0;
  top: 0;
}

.icon_circle_false {
  display: block;
  width: 32rpx;
  height: 32rpx;
}

.titleText {
  padding: 46rpx 0 44rpx;
  font-size: 30rpx;
  color: #333;
  border-bottom: 2rpx solid #F6F6F6;
}

.peopleIcon {
  width: 100%;
  height: 240rpx;
}

page {
  height: 100%;
  background: #F6F6F6;
}

.top {
  background: #fff;
  border-radius: 0px 0px 24rpx 24rpx;
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.rule {
  font-size: 28rpx;
  color: #666;
  font-weight: normal;
  margin-top: 16rpx;
}

.btn1 {
  flex: 1;
  margin-right: 13rpx;
  height: 88rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 8rpx 32rpx 0rpx rgba(248, 122, 47, 0.15);
  border-radius: 46rpx;
  border: 2rpx solid rgba(248, 122, 47, 1);
  text-align: center;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #F87A2F;
  font-weight: 500;
}

.btn2 {
  font-size: 32rpx;
  line-height: 88rpx;
  text-align: center;

  color: #fff;
  font-weight: 500;
  flex: 1;
  margin-left: 13rpx;
  width: 332rpx;
  height: 88rpx;
  background: linear-gradient(315deg, rgba(248, 122, 47, 1) 0%, rgba(249, 148, 87, 1) 100%);
  box-shadow: 0rpx 8rpx 32rpx 0rpx rgba(248, 122, 47, 0.3);
  border-radius: 46rpx;
}