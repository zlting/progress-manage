.main {
  padding: 42rpx 30rpx 0 30rpx;
}

.headImg {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;

}

.headName1 {
  font-size: 30rpx;
  color: #666666;
  font-weight:bold;
}
.headName {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.headDetail {
  font-size: 30rpx;
  color: #333;
  padding-bottom: 20rpx;
}

.imgList {
  display: flex;
  flex-wrap: wrap;
  padding-left: 76rpx;
}

.imgItem {
  width: 180rpx;
  height: 180rpx;
  margin-left: 24rpx;
  margin-bottom: 30rpx;
  border-radius: 10rpx;
}

.bottomNum {
  font-size: 28rpx;
  color: #333;
}

.time {
  font-size: 28rpx;
  color: #666;
}

.imgIcon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx
}

.evaluteList {
  padding: 40rpx 30rpx 0;
  background: rgba(246, 246, 246, 1);
  border-radius: 24rpx;
  margin-top: 40rpx;
}

.evaluteBottom {
  position: fixed;
  width: 100%;
  left: 0;
  right: 0;
  /* bottom: 0; */
  background: #fff;
  z-index: 22;
  height: 120rpx;
  box-shadow: 0px -8px 32px 0px rgba(0, 0, 0, 0.03);
}

.issue {
  font-size: 30rpx;
  color: #F87A2F;
}

.evalute_icon {
  width: 36rpx;
  height: 36rpx;
}

textarea {
  height: 36rpx;
  width: 100%;
  padding: 0 20rpx;
}

.noEvalute {
  font-size: 30rpx;
  color: #666;
  padding-bottom: 40rpx;
}

.commentsInput {

  width: auto;
  position: relative;
  flex: 1;
  padding-left: 30rpx;

  padding-right: 30rpx;

  font-size: 32rpx;

  word-break: break-all;

  word-wrap: break-word;

  color: #333;
  z-index: 21;

}
.replay{
  font-size: 30rpx;
  text-align: right;
  color: #64A3EA;
}
.btmDiv{
  height:120rpx;
  padding:0 30rpx
}