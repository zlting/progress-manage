.top {
  height: 204rpx;
  font-size: 28rpx;
  z-index: -1;
}
.topTrue {
  background: linear-gradient(226deg, rgba(255, 194, 130, 1) 0%, rgba(251, 150, 80, 1) 100%);
  color: #fff;
}

.topFalse {
  background: linear-gradient(225deg, rgba(246, 246, 246, 1) 0%, rgba(230, 230, 230, 1) 100%);
  color: #666;
}

.topThree {
  background: linear-gradient(216deg, rgba(249, 148, 87, 1) 0%, rgba(248, 122, 47, 1) 100%);
  color: #fff;

}

.activityStatus {
  padding: 40rpx 0 10rpx 30rpx;
  font-size: 36rpx;
  font-weight: bold;
}

.activityTime {
  padding-left: 30rpx;
}

.content {
  padding: 30rpx;
  border-radius: 24rpx;
  margin-top: -30rpx;
  background: #fff;
}

.activityTitle {
  font-weight: bold;
  font-size: 40rpx;
  color: #333;
  padding-bottom: 30rpx;
}

.label {
  font-size: 30rpx;
  color: #333;
}

.value {
  font-size: 30rpx;
  color: #666;
}

.icon_status {
  width: 100%;
  height: 10rpx;
  margin-bottom: 30rpx;
}

page {
  background: #F3F4F5;
}

.contentText {
  border-radius: 24rpx;
  background: #fff;
  font-size: 28rpx;
  color: #333;
  margin-top: 20rpx;
  padding: 30rpx
}

.button {
  position: fixed;
  bottom: 40rpx;
  margin: auto;
  width: 100%;
}

.buttonStatus {
  width: 400rpx;
  height: 88rpx;
  background: rgba(204, 204, 204, 1);
  box-shadow: 0rpx 8rpx 32rpx 0rpx rgba(204, 204, 204, 0.3);
  border-radius: 46rpx;
  text-align: center;
  line-height: 88rpx;
  margin: auto;
  font-size: 32rpx;
  color: #fff;
}

.vote {
  background: rgba(255, 255, 255, 1);
  border-radius: 24rpx;
  margin:20rpx 0;
}

.voteIcon {
  width: 8rpx;
  height: 28rpx;
  background: rgba(248, 122, 47, 1);
  border-radius: 0rpx 200rpx 200rpx 0rpx;
  margin-right: 20rpx;
}

.voteChange {
  font-size: 34rpx;
  color: #333;
  font-weight: bold;
}

.voteNum {
  font-size: 26rpx;
  color: #F87A2F;
